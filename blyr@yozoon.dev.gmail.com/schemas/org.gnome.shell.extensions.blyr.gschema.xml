<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/org/gnome/shell/extensions/blyr/" id="org.gnome.shell.extensions.blyr">
    <!-- Blur -->
    <key type="d" name="intensity">
      <default>10.0</default>
      <summary>Blur intensity</summary>
      <description>Influences the blur effect strenght</description>
    </key>
    <key type="d" name="activitiesbrightness">
      <default>0.7</default>
      <summary>Brightness value</summary>
      <description>Sets the brightness of the Activities background</description>
    </key>
    <key type="d" name="panelbrightness">
      <default>1.0</default>
      <summary>Brightness value</summary>
      <description>Sets the brightness of the Panel background</description>
    </key>
    <key type="i" name="mode">
      <default>2</default>
      <summary>Selects UI elements</summary>
      <description>Selects the UI elements to get a blurred background; 1 = panel-only, 2 = activities-only, 3 = blur-both</description>
    </key>
    <key type="b" name="debug-logging">
      <default>false</default>
      <summary>Log messages to systemd journal</summary>
      <description>Helpful for debugging purposes</description>
    </key>
  </schema>
</schemalist>